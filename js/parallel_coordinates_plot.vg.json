{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Though Vega-Lite supports only one scale per axes, one can create a parallel coordinate plot by folding variables, using `joinaggregate` to normalize their values and using ticks and rules to manually create axes.",
    "title": "Properties of Songs",
    "data": {
      "url": "https://raw.githubusercontent.com/lachiep9/Data-Vis-2/main/data/Songs%20Data.csv"
    },
    "width": 800,
    "height":400,
    "transform": [
      {"window": [{"op": "count", "as": "index"}]},
      {"fold": ["popularity","length", "danceability", "energy","liveness"]},
      {
        "joinaggregate": [
          {"op": "min", "field": "value", "as": "min"},
          {"op": "max", "field": "value", "as": "max"}
        ],
        "groupby": ["key"]
      },
      {
        "calculate": "(datum.value - datum.min) / (datum.max-datum.min)",
        "as": "norm_val"
      },
      {
        "calculate": "(datum.min + datum.max) / 2",
        "as": "mid"
      }
    ],
    "layer": [{
      "mark": {"type": "rule", "color": "#ccc"},
      "encoding": {
        "detail": {"aggregate": "count"},
        "x": {"field": "key"}
      }
    }, {
      "params":[
          {
            "name": "Genre",
            "select": {"type": "point", "fields": ["Cleaned genre"]},
            "bind": "legend"
          }
        ],
      "transform": [{"filter": {"param": "Genre"}}],
      "mark": "line",
      "encoding": {
        "color": {"type": "nominal", 
        "field": "Cleaned genre", 
        "scale":{
          "domain":["pop","rock","hip hop"],
          "range":["#5c75ed","red","green"]}},
        "detail": {"type": "nominal", "field": "song"},
        "opacity": {"value": 0.2},
        "x": {"type": "nominal", "field": "key"},
        "y": {"type": "quantitative", "field": "norm_val", "axis": null},
        "tooltip": [{
          "type": "nominal",
          "field": "artist"
        }, {
          "type": "nominal",
          "field": "song"
        }, {
          "type": "quantitative",
          "field": "popularity"
        }, {
          "type": "quantitative",
          "field": "length",
          "title": "length (minutes)"
        }, {
          "type": "quantitative",
          "field": "danceability"
        }, {
          "type": "quantitative",
          "field": "energy"
        }, {
          "type": "quantitative",
          "field": "loudness"
        }, {
          "type": "quantitative",
          "field": "liveness"
        }]
      }
    }, {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 0}
      },
      "layer": [{
        "mark": {"type": "text", "style": "label"},
        "encoding": {
          "text": {"aggregate": "max", "field": "max", "format": ".3f"}
        }
      }, {
        "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#0c0c0c"}
      }]
    }, {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 200}
      },
      "layer": [{
        "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#0c0c0c"}
      }]
    }, {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 400}
      },
      "layer": [{
        "mark": {"type": "text", "style": "label"},
        "encoding": {
          "text": {"aggregate": "min", "field": "min", "format": ".3f"}
        }
      }, {
        "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#0c0c0c"}
      }]
    }],
    "config": {
      "axisX": {"domain": false, "labelAngle": 0, "tickColor": "#ccc", "title": null},
      "view": {"stroke": null},
      "style": {
        "label": {"baseline": "middle", "align": "right", "dx": -5},
        "tick": {"orient": "horizontal"}
      }
    }
  }
  